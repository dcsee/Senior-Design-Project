<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/container"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:mContext="atlantis.com.atlantis.activities.LockScreenActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="64dp"
        android:src="@drawable/large_lock_icon"
        android:contentDescription="@string/large_lock_icon_description" />

    <EditText
        android:layout_width="wrap_content"
        android:paddingTop="64dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/pin_text"
        android:layout_gravity="center_horizontal"
        android:hint="@string/lock_screen_text" />

</LinearLayout>
